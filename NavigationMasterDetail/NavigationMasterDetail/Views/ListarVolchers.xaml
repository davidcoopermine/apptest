<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavigationMasterDetail.Views.ListarVolchers">


  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand">

      <ListView x:Name="Volchers" ItemsSource="{Binding Lista}">
        <ListView.ItemTemplate>

          <DataTemplate>

            <ImageCell Text="{Binding login}"
                       Detail="{Binding pass}"
                       ImageSource="https://s.yimg.com/dh/ap/social/profile/profile_b48.png" >

            </ImageCell>

          </DataTemplate>

        </ListView.ItemTemplate>
      </ListView>
 
    </StackLayout>
  </ContentPage.Content>
  
</ContentPage>